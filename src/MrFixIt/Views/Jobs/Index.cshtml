<script type="text/javascript">
    $(document).ready(function () {
        $(".claim-job").click(function () {
            console.log(this.id);
            var selectedJobToClaim = this.id;
            $.ajax({
                type: 'GET',
                data: { id: selectedJobToClaim },
                dataType: 'json',
                contentType: 'application/json',
                url: '@Url.Action("Claim")',
                success: function (result) {
                    console.log(result);
                    $('#claim-job-display').html(result);
                }
            });
        });
    });
</script>


<div class="text-center">
    <h3>Our Current Jobs</h3>
    @Html.ActionLink("Add a new job", "Create")
</div>
@foreach (var Job in Model)
{
    <ul>
        <li>@Job.Title</li>
            <li>@Job.Description</li>
    </ul>
        @if (Job.Worker == null)
        {
            <ul>
        <li class="claim-job">This job is unclaimed. @*@Html.ActionLink("Claim This Job", "Jobs", new { @text = @Job.Title, id = Job.JobId })*@
                <button type="button" class="claim-job btn btn-info">Claim this job</button>
        </li>
           </ul>
            <div id="claim-job-display"></div>
        }
        else
        {
        <ul>
            <li class="btn">This Job is claimed by @Job.Worker.FirstName @Job.Worker.LastName</li>

        </ul>
        }

    <hr />
}

