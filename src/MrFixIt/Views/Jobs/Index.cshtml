<div class="text-center">
    <h3>Our Current Jobs</h3>
    @Html.ActionLink("Add a new job", "Create")
</div>
@foreach (var Job in Model)
{
    <ul>
        <li>@Job.Title</li>
        <ul>
            <li>@Job.Description</li>
        </ul>
        @if (Job.Worker == null)
        {
            <li class="btn">This job is unclaimed. 

        <button id="@Job.JobId" type="button" class="claim-job">Claim job</button>
        
        @*@Html.ActionLink("Claim This Job", "Claim", new { @text = @Job.Title, id = Job.JobId })*@
        </li>

        <div id="claim-job-display"></div>

        }
        else
        {
            <li class="btn">This Job is claimed by @Job.Worker.FirstName @Job.Worker.LastName</li>

        }
    </ul>


    <hr />
}

<script type="text/javascript">
        $(document).ready(function () {
            $(".claim-job").click(function () {
                //console.log("Model: " + jobId);
                //console.log("Model2: " + Job.JobId);
                console.log(this.id);
                var clickedJob = this.id;
                console.log(clickedJob);
                    $.ajax({
                    type: 'GET',
                    data: { id: clickedJob.JobId },
                    dataType: 'json',
                    contentType: 'application/json',
                    url: '@Url.Action("ClaimJobCtrl")',
                    success: function (result) {
                        console.log(result);
                        $('#claim-job-display').html(result);
                    }
                });
            });
        });
    </script>